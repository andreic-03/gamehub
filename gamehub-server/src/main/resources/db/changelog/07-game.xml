<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-table-games" author="Andrei">
        <createTable tableName="games">
            <column name="game_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_games"/>
            </column>
            <column name="game_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="game_description" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="game_category" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="game_picture_url" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="created_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="updated_on" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="version" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_game_created_by_user"
                                 baseTableName="games" baseColumnNames="created_by"
                                 referencedTableName="users" referencedColumnNames="id"
                                 deleteCascade="false"/>
        <addForeignKeyConstraint constraintName="fk_game_updated_by_user"
                                 baseTableName="games" baseColumnNames="updated_by"
                                 referencedTableName="users" referencedColumnNames="id"
                                 deleteCascade="false"/>
    </changeSet>

    <changeSet id="insert-default-game" author="Andrei">
        <insert tableName="games">
            <column name="game_name" value="Football"/>
            <column name="game_description" value="Football game"/>
            <column name="game_category" value="Sports"/>
            <column name="game_picture_url" value="https://i.pinimg.com/474x/a5/97/36/a59736fdb4f01bbf0d3ed5bd4b77c54f.jpg"/>
        </insert>
        <insert tableName="games">
            <column name="game_name" value="Tennis"/>
            <column name="game_description" value="Tennis game"/>
            <column name="game_category" value="Sports"/>
            <column name="game_picture_url" value="https://img.freepik.com/free-photo/high-angle-paddle-tennis-white-line_23-2149459020.jpg"/>
        </insert>
    </changeSet>

</databaseChangeLog>